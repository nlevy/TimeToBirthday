<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nirlevy.timetobirthday">

    <application
        android:allowBackup="true"
        android:name=".TTBApplication"
        android:icon="@drawable/present"
        android:label="@string/app_name"
        android:logo="@drawable/present"
        android:roundIcon="@drawable/present"
        android:supportsRtl="true"
        android:textAlignment="center"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddPersonActivity" />
        <activity android:name=".PersonListActivity" />
    </application>

</manifest>